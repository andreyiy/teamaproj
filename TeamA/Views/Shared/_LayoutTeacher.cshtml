<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    @*<meta name="viewport" content="width=device-width" />*@
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/Scripts/jquery.datetimepicker.full.js")
    @Styles.Render("~/Content/jquery.datetimepicker.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/BootstrapJS")
    @Scripts.Render("~/bundles/ajax")
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.0.js"></script>
    <script src="/signalr/hubs"></script>
</head>
<body>
    <div class="container">
        <h2>Welcome!</h2>

        <div class="row">
            <div class="col-md-10">
                <ul class="nav nav-tabs">
                    <li>@Html.ActionLink("Home", "Index", "Teacher")</li>
                    <li>@Html.ActionLink("View All Students", "ListStudents", "Teacher")</li>
                    <li>@Html.ActionLink("View all homework", "ViewOneTeacherHomeworks", "Teacher")</li>
                    <li>@Html.ActionLink("View student uploads", "ViewStudentUploads", "Teacher", new { teacherFolder = (string)Session["SessionUser"] + "_" + Session["SessionUserId"] }, null)</li>
                    <li>@Html.ActionLink("Raports", "Raports", "Teacher")</li>
                    <li><div id="circle"></div></li>
                </ul>
            </div>
            <div class="col-md-2">
                @Html.Partial("_LoginPartial")
            </div>
        </div>

    </div>

